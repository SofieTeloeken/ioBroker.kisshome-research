{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "General settings",
            "items": {
                "email": {
                    "type": "text",
                    "sm": 12,
                    "md": 3,
                    "lg": 3,
                    "label": "Email",
                    "tooltip": "Email address as registered in the KISSHome research"
                },
                "_hint": {
                    "newLine": true,
                    "type": "staticLink",
                    "sm": 12,
                    "href": "https://kisshome-feldversuch.if-is.net/register",
                    "text": "To participate in the KISSHome research, you need to register here."
                },
                "fritzbox": {
                    "newLine": true,
                    "type": "ip",
                    "sm": 12,
                    "md": 3,
                    "lg": 3,
                    "label": "FritzBox IP"
                },
                "login": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 3,
                    "lg": 3,
                    "label": "FritzBox Login"
                },
                "password": {
                    "type": "password",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "FritzBox Password"
                },
                "iface": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "FritzBox Interface"
                },
                "tempDir": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 3,
                    "lg": 3,
                    "label": "Working directory",
                    "tooltip": "Directory for temporary files. Leave empty to use the system directory."
                },
                "_header": {
                    "newLine": true,
                    "type": "header",
                    "size": 4,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "text": "Recording"
                },
                "recordingEnabled": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 3,
                    "lg": 3,
                    "disabled": "!data.email || !data.fritzbox || data.fritzbox === '0.0.0.0' || !data.login || !data.password || !data.iface",
                    "label": "Recording enabled"
                }
            }
        },
        "_instances": {
            "type": "panel",
            "label": "Known IP addresses",
            "items": {
                "_custom": {
                    "newLine": true,
                    "type": "custom",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "i18n": true,
                    "url": "custom/customComponents.js",
                    "name": "ConfigCustomKissHomeResearchSet/Components/ConfigCustomInstancesSelector"
                }
            }
        },
        "_custom": {
            "type": "panel",
            "label": "Custom IP addresses",
            "items": {
                "customIPs": {
                    "type": "table",
                    "newLine": true,
                    "compact": true,
                    "sm": 12,
                    "uniqueColumns": ["ip"],
                    "items": [
                        {
                            "attr": "ip",
                            "type": "text",
                            "width": "33%",
                            "title": "IP address"
                        },
                        {
                            "attr": "mac",
                            "type": "text",
                            "width": "33%",
                            "title": "MAC address"
                        },
                        {
                            "attr": "desc",
                            "type": "text",
                            "width": "33%",
                            "title": "Description"
                        }
                    ]
                }
            }
        }
    }
}
